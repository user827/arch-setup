[Trigger]
Operation = Install
Operation = Upgrade
Type = Path
Target = boot/*
Target = efi/*
Target = usr/lib/modules/*/vmlinuz
Target = usr/lib/modules/*/extramodules/*
Target = usr/lib/initcpio/*
Target = usr/lib/**/efi/*.efi*

[Action]
Description = Signing grub entries...
When = PostTransaction
# Needs to run after sbctl hook has modified the binary
Exec = /usr/bin/grubsign --sign-all
Depends = sh
Depends = gnupg
